unit posdesignDelphi.view.pages.app;

interface

uses
  System.SysUtils,
  System.Types,
  System.UITypes,
  System.Classes,
  System.Variants,
  FMX.Types,
  FMX.Controls,
  FMX.Forms,
  FMX.Graphics,
  FMX.Dialogs,
  FMX.Layouts,
  posdesignDelphi.view.components.navbar;

type
  TPageApp = class(TForm)
    LayoutContainer: TLayout;
    LayoutNavBar: TLayout;
    LayoutBody: TLayout;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    function Build: TFMXObject;
  end;

var
  PageApp: TPageApp;

implementation

{$R *.fmx}

function TPageApp.build: TFMXObject;
begin
  Result := LayoutContainer;
end;

procedure TPageApp.FormCreate(Sender: TObject);
begin
  LayoutNavBar.AddObject(TComponentsNavBar.Create(Self).Build);
end;

end.
