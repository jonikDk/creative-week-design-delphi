unit posdesignDelphi.view.components.itemcard;

interface

uses
  System.SysUtils,
  System.Types,
  System.UITypes,
  System.Classes,
  System.Variants,
  FMX.Types,
  FMX.Controls,
  FMX.Forms,
  FMX.Graphics,
  FMX.Dialogs,
  FMX.Layouts,
  FMX.Controls.Presentation,
  FMX.StdCtrls,
  FMX.Objects;

type
  TComponentCard = class(TForm)
    Layout1: TLayout;
    Layout2: TLayout;
    Layout3: TLayout;
    Layout4: TLayout;
    lblPreco: TLabel;
    lblDescricao: TLabel;
    Layout5: TLayout;
    Image1: TImage;
    Rectangle1: TRectangle;
    SpeedButton1: TSpeedButton;
  private
    FClick: TProc<TObject>;
  public
    { Public declarations }
    function Build: TFMXObject;
    function Recursos(Imagem, Descricao, Valor: string): TComponentCard;
    function Click(Value: TProc<TObject>): TComponentCard;

  end;

var
  ComponentCard: TComponentCard;

implementation

{$R *.fmx}
{ TComponentCard }

function TComponentCard.Build: TFMXObject;
begin
  Result := LayoutContainer;
end;

function TComponentCard.Click(Value: TProc<TObject>): TComponentCard;
begin
  Result := Self;
end;

function TComponentCard.Recursos(Imagem, Descricao, Valor: string): TComponentCard;
begin
  Result := Self;

  lblDescricao.Text := Descricao;
  lblPreco.Text := Valor;


end;

end.
